{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "firewalldiagnostics": {
            "type": "object"
        },
        "firewall": {
            "type": "object"
        }
    
},
"variables": {
            "retentionpolicy": "[parameters('firewalldiagnostics').retentionpolicy]"
}, 
"resources": [
    {
        "type": "Microsoft.Network/azureFirewalls/providers/diagnosticSettings",
        "apiVersion": "2017-05-01-preview",
        "name": "[concat(parameters('firewall').name, '/Microsoft.Insights/FW-SA-Setting')]",
        "dependsOn": [],
        "properties": {
            "storageAccountId": "/subscriptions/3fcee2cc-1758-46d1-b7b7-d9d3f031c9b1/resourcegroups/lz-rg-diag/providers/Microsoft.Storage/storageAccounts/jpsadiag2123",
            "logs": [
                {
                    "category": "AzureFirewallApplicationRule",
                    "enabled": true,
                    "retentionPolicy": "[variables('retentionpolicy')]"
                },
                {
                    "category": "AzureFirewallNetworkRule",
                    "enabled": true,
                    "retentionPolicy": "[variables('retentionpolicy')]"
                },
                {
                    "category": "AzureFirewallDnsProxy",
                    "enabled": true,
                    "retentionPolicy": "[variables('retentionpolicy')]"
                }
            ],
            "metrics": [
                {
                    "category": "AllMetrics",
                    "enabled": true,
                    "retentionPolicy": "[variables('retentionpolicy')]"
                }
            ]
        }
    }
] }
