{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualNetworkParameters": {
            "type": "object"
        },
        "FirewallParameters": {
            "type": "object"
        }
    },
    "variables": {
        "name": "[parameters('VirtualNetworkParameters').name]",
        "resourceId": "[resourceId('Microsoft.Network/virtualNetworks', variables('name'))]",
        "addressSpace": "[parameters('VirtualNetworkParameters').properties.addressSpace]",
        "subnets": "[parameters('VirtualNetworkParameters').subnets]"
    },
    "resources": [
        {
            "comments": "** VIRTUAL NETWORK **",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "name": "[variables('name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": "[variables('addressSpace')]",
                "enableDdosProtection": "[parameters('VirtualNetworkParameters').properties.enableDdosProtection]",
                "enableVmProtection": "[parameters('VirtualNetworkParameters').properties.enableVmProtection]",
                "copy": [
                    {
                        "name": "subnets",
                        "count": "[length(variables('subnets'))]",
                        "input": {
                            "name": "[variables('subnets')[copyIndex('subnets')].name]",
                            "properties": {
                                "addressPrefix": "[variables('subnets')[copyIndex('subnets')].properties.addressPrefix]",
                                "privateEndpointNetworkPolicies": "Disabled"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "virtualNetworkName": {
            "type": "string",
            "value": "[variables('name')]"
        },
        "virtualNetworkResourceId": {
            "type": "string",
            "value": "[variables('resourceId')]"
        }
    }
}